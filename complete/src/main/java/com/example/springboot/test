@RequestMapping(path="/calserv", produces="application/json")
//@CrossOrigin(origins="*")
public class Add {

//    @GetMapping(value = "/add/{num1}/{num2}", produces = MediaType.APPLICATION_JSON_VALUE)
    @GetMapping(value = "/add/{num1}/{num2}")
    public OperationInput add (@PathVariable int num1, @PathVariable int num2, @RequestBody OperationInput op) {
    return op;
//        return num1+num2;
    }

}

